{
  "manifest_version": 3,
  "name": "获取 WhatsApp 小组",
  "description": "快速列印 WhatsApp 小组链接，获取小组名字和头像。",
  "author": "Raz1ner",
  "version": "1.1.5",
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["*://*/*"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
